<%- include('../partials/header') %>
<div class="card p-4">
  <h2 class="fw-bold mb-3 text-primary"><%= supplier._id ? 'Edit Supplier' : 'New Supplier' %></h2>
  <form method="POST" action="<%= supplier._id ? '/suppliers/' + supplier._id + '?_method=PUT' : '/suppliers' %>">
    <div class="mb-3">
      <label class="form-label">Name</label>
      <input type="text" name="name" class="form-control" value="<%= supplier.name || '' %>" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Address</label>
      <input type="text" name="address" class="form-control" value="<%= supplier.address || '' %>">
    </div>
    <div class="mb-3">
      <label class="form-label">Phone</label>
      <input type="text" name="phone" class="form-control" value="<%= supplier.phone || '' %>">
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a href="/suppliers" class="btn btn-secondary">Cancel</a>
  </form>
</div>
<%- include('../partials/footer') %>
